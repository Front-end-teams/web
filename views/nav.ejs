<body style="margin-top: 50px">
	<header class="header">
		<div class="logo">新世界</div>
		
		<ul class="index clearfix">
		<% if (user) { %>


		<% if (user.smallimg) { %>
			<li><a href ="/user"><img src="<%= user.smallimg %>" class = 'user-small-img'></a></li>
		<% } else { %>
			<li><a href ="/user"><%= user.name %></a></li>
		<% } %>

			<li><a href="/logout" id="logout">退出</a></li>
			
			
		<% } else { %>
		
			<li><a href="javascript:void(0)" id="login">登录</a></li>
			<li><a href="javascript:void(0)" id="reg">注册</a></li>
			
		<% } %>
			<li><a href="/job-top5">工作</a></li>

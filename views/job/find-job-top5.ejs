<%- include ../header %>
	<link rel="stylesheet" type="text/css" href="/stylesheets/job.css">
	<script type="text/javascript" src="javascripts/recruit.js"></script>

<%- include ../nav %>
	<div class="main">
	    <p class="title">
			Web前端开发职位招聘信息
		</p>
		<!--......................下面是搜索页面的内容，但是如何把这些内容传输到后台....................-->
		<form action="/job-search" method='post'>
		<ul class="searchJob clearfix" id="searchJob">
			<li class="searchJob_li">
				<input type="text" placeholder="招聘类型" id="recruitType" name="recruitType">
				<ul class="searchJob_li_ul" id="recruitType_ul">
				    <li>请选择</li>
					<li><span></span>校园招聘</li>
					<li><span></span>社会招聘</li>
					<li><span></span>实习生招聘</li>
				</ul>
			</li>
			<li class="searchJob_li">
				<input type="text" placeholder="工作地点" id="workPlace" name="workPlace">
				<ul class="searchJob_li_ul" id="workPlace_ul">
				    <li>请选择</li>
					<li><span></span>北京</li>
					<li><span></span>上海</li>
					<li><span></span>广州</li>
					<li><span></span>深圳</li>
					<li><span></span>杭州</li>
					<li><span></span>天津</li>
					<li><span></span>大连</li>
					<li><span></span>西安</li>
					<li><span></span>武汉</li>
					<li><span></span>南京</li>
					<li><span></span>郑州</li>
				</ul>
			</li>
			<li class="searchJob_li">
				<input type="text" placeholder="工作经验" id="experience" name="experience">
				<ul class="searchJob_li_ul" id="experience_ul">
				    <li>请选择</li>
					<li>无工作经验</li>
					<li>1年以内工作经验</li>
					<li>1-3年工作经验</li>
					<li>3年以上工作经验</li>
				</ul>
			</li>
			<li class="searchJob_li">
				<input type="text" placeholder="排序规则" id="rank" name="rank">
				<ul class="searchJob_li_ul" id="rank_ul" >
				    <li>请选择</li>
				    <li><span></span>最新发布</li>
					<li><span></span>历史发布</li>			
				</ul>
			</li>
		    <li class="searchJob_li search">
		        <input type="submit" value="搜索"/>		        		        
		    </li>
		    <li class="searchJob_li public">
		        <a href="/job-insert">我要去发布</a>	        		        
		    </li>		    
		</ul>	
		</form>
        <!--表单提交结束-->
		<div class="content">
		<%if(watch){%>
            <%=watch%>
       <%}else{%>
          <% jobs.forEach(function (job, index) { %>
		   <div class="recruitInfo">
		        <div class="infoList">
 					<label>公司名称：</label><%= job.companyName %><br>
				    <label>公司地点：</label><%= job.companyLocation %><br>
				    <label>工作地点：</label><%= job.workLocation %><br>
				    <label>招聘类型：</label><%= job.jobType %><br>
				    <label>招聘人数：</label><%= job.jobNum %><br>		    
				    <label>工作经验：</label><%= job.workTime %><br>
				    <label>发布时间：</label><%= job.jobTime.day %><br>
			    </div>
			    <div class="infoList">
				    <label>工资待遇：</label><%= job.pay %><br>
				    <label>学历要求：</label><%= job.xueli %><br>
				    <label>每周几天：</label><%= job.ave %><br>
				    <label>实习时长：</label><%= job.tim %><br>
				    <label>公司主页：</label><%= job.we %><br>
				    <label>公司行业：</label><%= job.wl %><br>
				    <label>公司人数：</label><%= job.pep %><br>
			    </div>
			    <div class="infoList">
				    <label>截止时间：</label><%= job.dl %><br>
			    </div>
			    <a href="/job-detail?id=<%=job._id%>" class="more">点击查看详细信息</a>			    
		   </div>
		  <% }) %>
        </div>
	</div>
	 <%}%>


		
<%- include ../footer %>

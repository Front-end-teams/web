<%- include ../header %>
	<link rel="stylesheet" type="text/css" href="/stylesheets/reading.css">
<%- include ../nav %>
	<section>
		<div class="container">
			<div class="main_left">
				<div class="writeNote"><a href="/note" id="write">写读书笔记</a></div>
				<div class="tabs">
					<a>热门</a><a>精选</a><a>交流</a><a>技术</a>
				</div>
				<hr/>

				<% posts.forEach(function (post, index) { %>
        <div class="recommand_article">
        	<div class="author"><img src="/images/1.jpg" alt="author"/><div class="author-name">111</div></div>
						<a class="title" href="/detail/<%= post.author %>/<%= post.title %>"><%= post.title %></a>
						<span class="time">日期：<%= post.time %></span>

            
            <p><%- post.art %>
            
            </p>
            <div class="article_message">
                <div class="author_img"><img src="" alt="" style="width:20px;height:20px;"></div>
                <a class="author_name" href="#" target="_blank"><%= post.author %></a>
                <a class="article_cat" href="#"><%= post.cates %></a>
                <span class="article_time"><%= post.time %></span>
                <span class="browser">浏览 <%= post.pv %></span>
                <span class="like">点赞 <%= post.agree %></span>
                <span class="comment">评论</span>
            </div>
        </div>
        <% }) %>
				
					<hr/>
			<div id="sidetab">
            <!-- tabHead -->
            <ul class="tab-nav">
                <li><a href="javascript:void(0)">热门</a></li>
                <li><a href="javascript:void(0)">原创</a></li>
            </ul>
         
            <!-- tabPanel-->
            <ul class="tab-bd">
                <li class="tabshow">
                    aiasfhhsfahfhahfah 
                </li>
                <li class="tabhide">
                    safifahkkfakhfakh
                </li>
            </ul>
        </div>
    </div>   	
		

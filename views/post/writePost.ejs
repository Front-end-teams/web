<!-- 弹出框 -->
<div class="pop-cont p2" id="pop-cont">
    <div class="pop">
      <section class="pop-title"><h3>提示</h3></section>
      <section class="pop-content">文章上传成功</section>
      <section class="pop-footer">
        <a class="confirm" href="/writePost">继续写博客</a>
        <a class="cancel" >查看博客</a>
      
      </section>

    </div>
  </div>

<div class="user-info">
	<img class="user-img" src="">
	<div class="user-detail">
	<span class="author"><%= author %></span><span>积分：100</span>
	<div><a href="">个人主页</a></div>
	</div>
</div>


<!-- 写文章区域 -->
<article class="post-write">
<form method="post" enctype="multipart/form-data" id="form-article">
<div class="post-input">
<label><span class="must">*</span>文章标题：</label><input type="text" name="title" placeholder="请输入标题" class="text-input"></input></div>

<div class="post-input"><label>文章封面：</label>
<div class="input-file">

<input  type="file" name="postImg" value="上传图片" id="upload" class="file-button">

<label class="file-button-img">上传封面</label>

</div>

</div>

<div class="post-input post-cont"><label><span class="must">*</span>文章内容：</label></div>
<textarea name='post' class="xheditor rich-text">test</textarea>
<div class="post-input">
<label><span class="must">*</span>文章标签：</label>
<div class="post-tags" id="post-tags">
<div id="tags-div" name="tags"></div>
<input type="text"  class="text-input" id="tags-input" autocomplete="off"></input><span class="tips">最多添加三个标签，标签之间用","隔开</span> 


<!-- 当标签文本框获得焦点时触发 显示常用标签 -->
<div class="common-tags post-cont" id="common-tags">
  <div class="tags-show">
  <table><tbody><tr><td>常用标签：</td><td id="tags">
	<% for(var i=0; i<tags.length; i++){ %>
	<% if(tags[i]){ %>
  	<span class="tag-style"><%= tags[i] %></span>
  	<% } %>
  	<% } %>
  </td></tr></tbody></table></div>
</div>
</div>
</div>  

<!-- 个人分类 当分类文本框获得焦点是 显示个人分类 -->
<div class="post-input"><label>个人分类：</label>
<div class="post-cates-input">
<input type="text" class="text-input"  id="cates-input"></input><span class="tips">多个分类之间用","隔开</span>

<div class="common-cates" id="common-cates">
  <div class="cates-show">
  <table>
  <tbody id="cates-table">
  <tr>
  <% for( var i=0; i<cates.length; i++ ){ %>
  <% var j = 1 %>
  <% if ( cates[i] ){ %>

  <% if(j % 5){ %>

  <td><input type="checkbox" name="cates" value= <%= cates[i] %>><%= cates[i] %></input></td>
  <% j++ %>
  <% } else { %>
  </tr>
  <tr>
    <td><input type="checkbox" name="cates" value= <%= cates[i] %>><%= cates[i] %></input></td>
  <% j++; %>
  <% } %>
  <% } %>
  <% } %>
  </tr>
  </tbody>
  </table>
  </div>
</div>
</div>

<div class="submit"><input type="submit"  class="button submit" value="发表文章" id="submit"></input>
<input type="submit" class="button submit"  value="保存"></input></div>
</form>
</article>




<%- include ../header %>
	<link rel="stylesheet" type="text/css" href="/stylesheets/reading.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/post.css">
<%- include ../nav %>
	<section>
		<div class="container">
			<div class="main_left">
				<div class="writeNote"><a href="/note" id="write">写读书笔记</a></div>
				<div class="tabs">
					<a>热门</a><a>精选</a><a>交流</a><a>技术</a>
				</div>
				<hr/>

				<% posts.forEach(function (post, index) { %>
        <div class="hot-article">
        	<div class="author"><img src="/images/1.jpg" alt="author"/><div class="author-name">111</div></div>
						<a class="title" href="/detail/<%= post.author %>/<%= post.title %>"><%= post.title %></a>
						<span class="time">日期：<%= post.time %></span>

            
            <div class="post-cont"><%- post.art %></div>
            
            
            <div class="article-message">
                
                
                <% for (var i = 0; i < post.tags.length; i++ ){ %>
                <a class="article-tag" href="#"><%= post.tags[i] %></a>
                <% } %>
                <div class="post-info">
                <span class="browser">浏览 <%= post.pv %></span>
                <span class="like">点赞 <%= post.agree %></span>
                <span class="comment">评论</span>
                </div>
            </div>
        </div>
        <% }) %>
				
		<hr/>
			<div id="sidetab">
            <!-- tabHead -->
            <ul class="tab-nav">
                <li><a href="javascript:void(0)">热门</a></li>
                <li><a href="javascript:void(0)">原创</a></li>
            </ul>
         
            <!-- tabPanel-->
            <ul class="tab-bd">
                <li class="tabshow">
                    aiasfhhsfahfhahfah 
                </li>
                <li class="tabhide">
                    safifahkkfakhfakh
                </li>
            </ul>
        </div>
    </div>   	
		
<%- include ../footer %>
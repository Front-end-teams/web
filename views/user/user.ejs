<%- include ../header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/user.css">
<%- include ../nav %>
<!-- 用户界面的头部 -->
<header class="user-header clearfix">
	<div class="user-info">
		<div class="user-img"><a href="/userSet"><span class="user-set iconfont" ></span></a>
		<img src="<%= user.bigimg %>"></div>
		<div class="user-detail">
			<span class="user-name">Charlene</span>

			<p class="about-info">职业</p>
			<p class="user-desc">这位同学很懒</p>
		</div>
	</div>

	<div class="user-data">
		<div class="user-item">
			<em><%= user.attention.length %></em>
			<span>关注</span>

		</div>
		<div class="user-item">
			<em><%= user.fans.length %></em>
			<span>粉丝</span>
		</div>

		<div class="user-item">
			<em>0</em>
			<span>积分</span>
		</div>
	</div>
</header>

<!-- 用户界面的中间部分 -->

<!-- 左侧导航 -->
<div class="user-wrap clearfix">
 <nav class="slider">
	<ul>
		<li><a href="#"><span class="user-index">&#xe602</span>我的文章</a></li>
		<li><a href="#"><span class="user-index">&#xe60a</span>我的回答</a></li>
		<li><a href="#"><span class="user-index">&#xe61c</span>我的提问</a></li>
		<li><a href="#"><span class="user-index">&#xe62b</span>我的收藏</a></li>
	</ul>
</nav> 

<!-- 导航右侧具体内容 -->
<div class="user-cont">
<span class="cont-header">我的文章</span>
<div class="user-post">
	
	<% for(var i=0;i<post.length;i++){ %>
	<div class='mypost-wrap'>
		<div class="mypost">
		
			<h2 class="mypost-title"><%- post[i].title %></h2>
			<div><%- post[i].art %></div>
			<div class="mypost-info">
				<span>评论 </span>
				<span>点赞<%- post[i].agree.length %></span>
				<span>浏览<%- post[i].pv %></span>
			</div>
			<div class="mypost-img"></div>
		</div>
		<span class='time-tag'></span>
		<div class='time-show'>
			<b class='time-show-year'><%- post[i].time.split('-')[0] %></b>
			<span class='time-show-month'><%- post[i].time.split('-')[1] %>月<%- post[i].time.split('-')[2]%>日</span>
		</div>
	</div>

	<% } %>
	
</div>
</div>
</div>
 <%- include ../footer %>
 <script type="text/javascript" src="./javascripts/user.js"></script>
 <%- include ../end %>